<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
             android:layout_height="match_parent" android:descendantFocusability="blocksDescendants"
             android:stretchColumns="*">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:id="@+id/primerTxtView" android:layout_span="3"
                android:layout_column="0" android:padding="10dp" android:layout_marginLeft="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:id="@+id/primerTubeTxtView" android:layout_column="1"
                android:layout_span="2" android:padding="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:id="@+id/lotTxtView" android:layout_column="2"
                android:layout_span="3" android:padding="10dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/locationTxtView" android:layout_column="3"
                android:layout_span="2" android:padding="10dp" android:layout_marginLeft="10dp"/>
        <Spinner
                android:layout_width="0dp"
                android:id="@+id/bemerkungSpinner" android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
                android:layout_marginRight="10dp" android:padding="10dp" android:layout_column="4"
                android:layout_span="3"/>
    </TableRow>
</TableLayout>