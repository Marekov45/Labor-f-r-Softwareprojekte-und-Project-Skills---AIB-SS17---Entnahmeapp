<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_lager_rueckgabe_gui"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="client_aib_labswp_2017_ss_entnahmeapp.View.View.LagerRueckgabeGUI">


    <TextView
            android:text="Primer-RÃ¼ckgabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textSize="30sp"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_alignBottom="@+id/imageView" android:layout_centerHorizontal="true"
    />
    <Button
            android:text="Entnommene Primer "
            android:layout_height="wrap_content" android:id="@+id/btn_gatheredPrimer"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true" android:layout_marginTop="30dp"
            android:layout_gravity="fill_vertical" android:textSize="14sp"
            android:background="@color/wallet_bright_foreground_holo_dark" android:layout_width="wrap_content"
            style="@android:style/Widget.DeviceDefault.Button.Small" android:layout_alignStart="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"/>
    <Button
            android:text="Primer scannen"
            android:layout_height="wrap_content"
            android:id="@+id/scanReturn"
            android:textColor="@color/cast_expanded_controller_background_color" android:layout_alignTop="@+id/search"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2" android:layout_marginTop="30dp" android:textSize="24sp"
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/textView2"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_gatheredPrimer">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/listvGatheredPrimer"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" android:id="@+id/btn_logoutReturn"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:layout_marginStart="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" app:srcCompat="@drawable/cegat3"
            android:id="@+id/imageView"
            android:layout_width="150dp" android:layout_height="120dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginTop="16dp"
            android:layout_gravity="left" android:layout_margin="20dp"/>

</RelativeLayout>