<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
        tools:context="client_aib_labswp_2017_ss_entnahmeapp.View.view.guis.ReturnGUI">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="1">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="146dp" android:weightSum="1" android:background="@android:color/white"
                android:layout_alignParentStart="true">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
                    android:layout_marginTop="10dp">
                <ImageView
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageView"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" android:layout_width="wrap_content"
                        android:layout_height="130dp" android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/cegat4"/>
                <TextView
                        android:text="Primer-RÃ¼ckgabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tvLastProcessedList" android:textSize="44sp"
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:layout_alignBottom="@+id/imageView" android:layout_centerHorizontal="true"
                        android:textAlignment="center" android:gravity="center"
                        android:background="@android:color/white" android:textAllCaps="false" android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:weightSum="1">


            <Button
                    android:text="Liste mit entnommenen Primern anzeigen"
                    android:layout_height="wrap_content" android:id="@+id/btn_gatheredPrimer"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true" android:layout_marginTop="0dp"
                    android:layout_gravity="fill_vertical" android:textSize="14sp"
                    android:textColor="@android:color/black" android:textStyle="normal|bold" android:layout_width="match_parent"
                    style="@android:style/Widget.DeviceDefault.Button.Small" android:layout_alignStart="@+id/imageView"
                    android:layout_alignEnd="@+id/imageView"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_gatheredPrimer" android:weightSum="1" android:layout_weight="1.01">
            <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/listvGatheredPrimer"
                    android:layout_gravity="center_vertical" android:layout_weight="0.85"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="64dp" android:background="@android:color/white">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="Primer scannen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scanReturn"
                        android:layout_alignBaseline="@+id/button6" android:layout_alignBottom="@+id/button6"
                        android:layout_weight="1" android:textColor="@android:color/black"
                        android:textStyle="normal|bold"/>
                <Button
                        android:text="Logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_logoutReturn"
                        android:layout_marginBottom="0dp" android:layout_alignParentBottom="true"
                        android:layout_alignEnd="@+id/button6"
                        android:textAlignment="center" android:layout_weight="1"
                        android:textColor="@android:color/black" android:textStyle="normal|bold"
   />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>