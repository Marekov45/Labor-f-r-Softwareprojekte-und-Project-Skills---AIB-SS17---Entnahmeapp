<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="*"
             android:descendantFocusability="blocksDescendants">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txtPrimer"
                android:layout_column="0"
                android:padding="10dp"
                android:layout_span="3"
                android:layout_width="0dp"/>
        <TextView
                android:id="@+id/txtStorageLocation"
                android:layout_column="1"
                android:padding="10dp"
                android:layout_span="5"
                android:layout_width="0dp"/>
        <Button
                android:id="@+id/btnTakeNote"
                android:layout_column="2"
                android:padding="10dp" android:text="Bemerkung"
                android:layout_span="3"
                android:background="@android:color/white" android:layout_width="0dp"
                android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>


    </TableRow>

</TableLayout>