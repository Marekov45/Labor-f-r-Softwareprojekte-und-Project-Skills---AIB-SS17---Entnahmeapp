<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/colorPrimaryDark">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/tvdetails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/tvdetails" android:layout_weight="1"
                    android:textSize="30sp" android:textStyle="normal|bold" android:textColor="@android:color/white"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/tvPrimerName"
                    android:layout_width="366dp"
                    android:layout_height="match_parent" android:id="@+id/tvPrimerName" android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@android:color/white"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="382dp"
                    android:layout_height="match_parent" android:id="@+id/tvNameActTube" android:textSize="24sp"
                    android:layout_weight="1" android:textAlignment="textStart" android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                    android:text="@string/tvPrimerTubeID"
                    android:layout_width="366dp"
                    android:layout_height="match_parent" android:id="@+id/tvPrimerTubeID" android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@android:color/white"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="382dp"
                    android:layout_height="match_parent" android:id="@+id/tvIDActTube" android:textSize="24sp"
                    android:layout_weight="1" android:textAlignment="textStart" android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                    android:text="@string/tvLOT"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content" android:id="@+id/tvLOT" android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@android:color/white"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content" android:id="@+id/tvLOTActTube" android:textSize="24sp"
                    android:layout_weight="1" android:textAlignment="textStart" android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                    android:text="@string/tvManufacturer"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content" android:id="@+id/tvManufacturer" android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@android:color/white"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content" android:id="@+id/tvManufacturerActTube" android:textSize="24sp"
                    android:layout_weight="1" android:textAlignment="textStart" android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                    android:text="@string/tvNote"
                    android:layout_width="366dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNote" android:textSize="24sp"
                    android:layout_weight="1" android:textColor="@android:color/white"/>
            <TextView
                    android:text="Platzhalter Dropdown Bemerkung"
                    android:layout_width="382dp"
                    android:layout_height="wrap_content" android:id="@+id/tvNoteActTube" android:textSize="24sp"
                    android:layout_weight="1" android:textAlignment="textStart" android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="275dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="@string/btnSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnSubmit" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

