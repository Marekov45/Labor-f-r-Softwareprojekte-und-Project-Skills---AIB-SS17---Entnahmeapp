<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="*" >

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c0c0c0">

        <TextView
                android:layout_column="0"
                android:padding="10dp"
                android:layout_span="3"
                android:text="Primer"
                android:textStyle="bold"
                android:background="#c0c0c0"
                android:layout_marginLeft="50dp"/>
        <TextView
                android:layout_column="1"
                android:padding="10dp"
                android:layout_span="5"
                android:text="Lagerkoordinate"
                android:textStyle="bold"
                android:background="#c0c0c0"
                android:gravity="center"/>
        <TextView
                android:text="zurückgegeben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textStyle="normal|bold"
                android:layout_column="2" android:layout_span="1" android:padding="10dp"
                android:layout_marginRight="10dp" android:gravity="center"/>
        <TextView
                android:layout_column="3"
                android:padding="10dp"
                android:layout_span="3"
                android:text="Man. Rückgabe."
                android:textStyle="bold"
                android:background="#c0c0c0"
        />
    </TableRow>

</TableLayout>