<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
            android:text="Primer scannen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan"
            android:layout_alignBaseline="@+id/button6" android:layout_alignBottom="@+id/button6"
            android:layout_alignStart="@+id/textView" android:layout_alignEnd="@+id/bListeAnzeigen"/>
    <Button
            android:text="Manuelle Eingabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_marginBottom="67dp" android:layout_above="@+id/button7" android:layout_alignParentEnd="true"
            android:layout_marginEnd="107dp"/>
    <Button
            android:text="Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            android:layout_marginBottom="33dp" android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/button6"/>
    <TextView
            android:text="Auftrags-ID"
            android:id="@+id/textView" android:layout_width="250dp"
            android:textSize="24sp"
            android:textStyle="bold" android:gravity="left|center"
            android:layout_height="30dp"
            android:layout_below="@+id/txtResult" android:layout_alignStart="@+id/bListeAnzeigen"
            android:layout_marginTop="83dp"/>
    <Button
            android:layout_width="233dp"
            android:layout_height="wrap_content" android:id="@+id/bListeAnzeigen"
            android:gravity="center"
            android:layout_marginStart="26dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="62dp" android:text="@string/bListeAnzeigen"/>
    <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtResult"
            android:layout_height="50dp" android:textSize="24sp" android:textAllCaps="true"
            android:text="Ergebnis" android:gravity="center"
            android:layout_marginEnd="59dp" android:layout_below="@+id/button6" android:layout_alignEnd="@+id/scan"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:layout_below="@+id/bListeAnzeigen" android:layout_alignParentStart="true" android:layout_marginTop="88dp">

        <TableRow>
            <TextView android:text="Primername"
                      android:layout_column="0"
                      android:layout_weight="1"
                      android:textStyle="bold" android:textSize="24sp" android:layout_width="30dp"
                      android:layout_height="30dp" android:gravity="center"/>
            <TextView android:text="PrimerID"
                      android:layout_column="1"
                      android:layout_weight="1" android:textStyle="bold" android:textSize="24sp"
                      android:layout_width="30dp" android:layout_height="30dp" android:gravity="center">
            </TextView>
            <TextView android:text="Lagerposition"
                      android:layout_width="30dp"
                      android:layout_column="2"
                      android:layout_weight="1" android:textStyle="bold" android:textSize="24sp"
                      android:layout_height="30dp">
            </TextView>
            <TextView
                    android:text="Status"
                    android:layout_width="30dp"
                    android:layout_height="30dp" android:textStyle="bold"
                    android:textSize="24sp" android:layout_weight="1" android:gravity="center"/>
            <TextView
                    android:text="Abteilung"
                    android:layout_width="30dp"
                    android:layout_height="30dp" android:textStyle="bold"
                    android:textSize="24sp" android:layout_weight="1" android:gravity="center"/>
        </TableRow>

        <ScrollView android:layout_height="409dp">
            <TableLayout android:id="@+id/primer_table"
                         android:layout_width="fill_parent"
                         android:layout_height="fill_parent">
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <TextView android:text="3AOX1"
                              android:layout_column="0"
                              android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                              android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp"
                              android:gravity="center">
                    </TextView>
                    <TextView android:text="GCAAATGGCATTCTGACATCC	"
                              android:layout_width="30dp"
                              android:layout_column="1"
                              android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                              android:layout_height="60dp">
                    </TextView>
                    <TextView android:text="G7"
                              android:layout_width="30dp"
                              android:layout_column="2"
                              android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                              android:layout_height="30dp" android:gravity="center">
                    </TextView>
                    <Spinner
                            android:layout_width="30dp"
                            android:layout_height="30dp" android:id="@+id/spinner" android:layout_weight="1"/>
                    <TextView
                            android:text="Lager"
                            android:layout_width="30dp"
                            android:layout_height="30dp" android:textStyle="bold"
                            android:textSize="18sp" android:layout_weight="1" android:gravity="center"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </TableLayout>
</RelativeLayout>