<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cast_expanded_controller_ad_container_white_stripe_color">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="1" android:background="@android:color/white"
            android:layout_alignParentStart="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cast_expanded_controller_ad_container_white_stripe_color" android:layout_marginTop="10dp">
            <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" app:srcCompat="@drawable/cegat3"
                    android:id="@+id/imageView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" android:layout_width="150dp" android:layout_height="120dp"/>
            <TextView
                    android:text="Primer-Entnahme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView2" android:textSize="44sp"
                    android:textColor="@color/cast_expanded_controller_background_color"
                    android:layout_alignBottom="@+id/imageView" android:layout_centerHorizontal="true"
                    android:textAlignment="center" android:gravity="center"
                    android:background="@android:color/white" android:textAllCaps="false"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp" android:weightSum="1" android:background="@android:color/white">
            <RadioGroup
                    android:id="@+id/listGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/line0"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                <RadioButton
                        android:text="@string/radioRoboter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioRoboter" android:layout_weight="1"
                        />
                <RadioButton
                        android:text="@string/radioManuell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioManuell" android:layout_weight="1"
                />
                <RadioButton
                        android:text="@string/radioExtra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioExtra" android:layout_weight="1"
                        />
                <RadioButton
                        android:text="@string/radioAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/radioAll" android:layout_weight="1"
                        />
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/bListeAnzeigen"
                        android:gravity="center"
                        android:text="@string/bListeAnzeigen"
                        android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                        android:layout_marginStart="73dp" android:layout_weight="1" android:background="?attr/colorControlHighlight"
                        android:textColor="@android:color/black" android:textStyle="normal|bold"
                        android:textAlignment="center"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="647dp" android:weightSum="1" android:background="?attr/colorControlHighlight">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tableLayout"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/txtResult"
                    android:layout_alignParentStart="true" android:weightSum="1">

                <TableRow>
                    <TextView android:text="@string/tvPosition"
                              android:layout_column="0"
                              android:layout_weight="1"
                              android:textStyle="bold" android:textSize="24sp" android:layout_width="wrap_content"
                              android:layout_height="30dp" android:gravity="center"
                              android:textColor="@android:color/white" android:id="@+id/tvPosition"
                              android:textAlignment="center"/>
                    <TextView android:text="@string/tvPrimername"
                              android:layout_column="1"
                              android:layout_weight="1" android:textStyle="bold" android:textSize="24sp"
                              android:layout_width="wrap_content" android:layout_height="30dp" android:gravity="center"
                              android:textColor="@android:color/white" android:id="@+id/tvPrimername"
                              android:textAlignment="center">
                    </TextView>
                    <TextView android:text="@string/tvPimerKoordinate"
                              android:layout_width="wrap_content"
                              android:layout_column="2"
                              android:layout_weight="1" android:textStyle="bold" android:textSize="24sp"
                              android:layout_height="30dp" android:textColor="@android:color/white"
                              android:id="@+id/tvPimerKoordinate" android:textAlignment="center">
                    </TextView>
                    <TextView
                            android:text="@string/tvDestination"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content" android:textStyle="bold"
                            android:textSize="24sp" android:layout_weight="1" android:gravity="center"
                            android:textColor="@android:color/white" android:id="@+id/tvDestination"/>
                    <TextView
                            android:text="@string/tvManualTake"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp" android:textStyle="bold"
                            android:textSize="24sp" android:layout_weight="1" android:gravity="center"
                            android:textColor="@android:color/white" android:id="@+id/tvManualTake"/>
                </TableRow>

                <ScrollView android:layout_height="wrap_content" android:background="?attr/colorControlHighlight" android:layout_marginTop="10dp">
                    <TableLayout android:id="@+id/primer_table"
                                 android:layout_width="fill_parent"
                                 android:layout_height="fill_parent">
                        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                            <TextView android:text="3AOX1"
                                      android:layout_column="0"
                                      android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                                      android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp"
                                      android:gravity="center" android:textColor="@android:color/white">
                            </TextView>
                            <TextView android:text="GCAAATGGCATTCTGACATCC	"
                                      android:layout_width="30dp"
                                      android:layout_column="1"
                                      android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                                      android:layout_height="60dp" android:textColor="@android:color/white">
                            </TextView>
                            <TextView android:text="G7"
                                      android:layout_width="30dp"
                                      android:layout_column="2"
                                      android:layout_weight="1" android:textStyle="bold" android:textSize="18sp"
                                      android:layout_height="30dp" android:gravity="center"
                                      android:textColor="@android:color/white">
                            </TextView>
                            <Spinner
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" android:id="@+id/spinner" android:layout_weight="1"/>
                            <TextView
                                    android:text="Lager"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" android:textStyle="bold"
                                    android:textSize="18sp" android:layout_weight="1" android:gravity="center"
                                    android:textColor="@android:color/white"/>
                        </TableRow>
                    </TableLayout>
                </ScrollView>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/white">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <Button
                            android:text="Primer scannen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/scan"
                            android:layout_alignBaseline="@+id/button6" android:layout_alignBottom="@+id/button6"
                            android:layout_weight="1" android:textColor="@android:color/black"
                            android:textStyle="normal|bold"/>
                    <Button
                            android:text="Logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button7"
                            android:layout_marginBottom="0dp" android:layout_alignParentBottom="true"
                            android:layout_alignEnd="@+id/button6"
                            android:textAlignment="center" android:layout_weight="1"
                            android:textColor="@android:color/black" android:textStyle="normal|bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>