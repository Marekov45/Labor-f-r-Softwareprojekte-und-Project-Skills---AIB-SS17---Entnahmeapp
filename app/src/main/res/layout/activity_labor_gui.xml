<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cast_expanded_controller_ad_container_white_stripe_color">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="1" android:background="@android:color/white"
            android:layout_alignParentStart="true">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cast_expanded_controller_ad_container_white_stripe_color" android:layout_marginTop="10dp">
            <ImageView
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" app:srcCompat="@drawable/cegat4"
                    android:id="@+id/imageView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" android:layout_width="210dp" android:layout_height="130dp" android:layout_marginLeft="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_width="350dp">
                <TextView
                        android:text="@string/descriptionTracking"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView2" android:textSize="44sp"
                        android:textColor="@color/cast_expanded_controller_background_color"
                        android:layout_alignBottom="@+id/imageView"
                        android:textAlignment="center"
                        android:background="@android:color/white" android:textAllCaps="false"
                        android:layout_centerHorizontal="false" android:gravity="center" android:layout_weight="1"
                        android:padding="10dp"/>
            </LinearLayout>
            <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/boxAdvancedSearch" android:layout_weight="1"
                    android:textSize="20sp" android:gravity="bottom|center_vertical|start"
                    android:paddingTop="100dp" android:text="@string/checkBoxAdvSearch" android:checked="false"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp" android:weightSum="1" android:background="@android:color/white">
            <SearchView
                    android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="550dp"
                    android:id="@+id/search">
            </SearchView>
            <Button
                    android:text="@string/btnList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnShowListAll" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="672dp" android:weightSum="1" android:background="?attr/colorControlHighlight">

            <ListView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


            </ListView>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/white">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp" android:layout_height="60dp">
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                />
                <Button
                        android:layout_height="wrap_content"
                        android:id="@+id/logout"
                        android:layout_alignEnd="@+id/button6"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" android:textStyle="normal|bold"
                        android:text="@string/btnLogout" android:layout_alignParentBottom="true"
                        android:layout_width="114dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>